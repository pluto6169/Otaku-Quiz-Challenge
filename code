import tkinter as tk
from tkinter import messagebox

questions = [
    ("Who killed Dio?", ["Jotaro", "Joseph", "Jonathan", "Abdul"], "Jotaro"),
    ("Who's Naruto's wife?", ["Sakura", "Hanabi", "Hinata", "Ino"], "Hinata"),
    ("Which one is Dio's son?", ["Jotaro", "Jorno", "Diegoo", "Kakyoin"], "Jorno"),
    ("Who killed Itachi?", ["Sasuke", "Boruto", "A and D", "His brother"], "A and D"),
    ("Which one is a real person?", ["Asta", "Hannibal", "Yohan", "Ban"], "Hannibal")
]

window = tk.Tk()
window.title("Quiz App")
window.geometry("400x300")
window.configure(bg="#2f2f2f") 

user_answers = []
current_question = 0

def next_question():
    global current_question
    if current_question < len(questions):
        question_text, options, _ = questions[current_question]
        question_label.config(text=question_text)
        for i, option in enumerate(options):
            radio_buttons[i].config(text=option, value=option)
    else:
        show_result()

def save_answer():
    selected_answer = var.get()
    user_answers.append(selected_answer)
    global current_question
    current_question += 1
    next_question()

def show_result():
    score = sum(1 for i, ans in enumerate(user_answers) if ans == questions[i][2])
    result_window = tk.Toplevel(window)
    result_window.title("Quiz Result")
    result_window.configure(bg="#2f2f2f")  # Dark gray background
    result_label = tk.Label(result_window, text=f"Your score is {score}/{len(questions)}", font=("Arial", 14), bg="#2f2f2f", fg="#fff")  # White text on dark background
    result_label.pack(pady=20)
    window.quit()

question_label = tk.Label(window, text="", font=("Arial", 14), bg="#2f2f2f", fg="#fff")  # White text on dark background
question_label.pack(pady=20)

var = tk.StringVar()
radio_buttons = [tk.Radiobutton(window, text="", variable=var, value="", font=("Arial", 12), bg="#2f2f2f", fg="#fff", selectcolor="#4CAF50") for _ in range(4)]  # White text on dark background
for i, rb in enumerate(radio_buttons):
    rb.pack(anchor='w', pady=5)

next_button = tk.Button(window, text="Next", command=save_answer, font=("Arial", 12), bg="#4CAF50", fg="#fff", relief="flat")  # Green button with white text
next_button.pack(pady=20)

next_question()

window.mainloop()
